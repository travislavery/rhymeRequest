    <![endif]-->
    <link href='css/main.css' rel='stylesheet'>
  </head>
  <body data-spy='scroll' data-target='#navbarTop'>
    <div id="home">
      <nav id="navbarTop" role="navigation" class="navbar">
        <div class="container-fluid">
          <div class="navbar-header">
            <button id="navbarToggleBtn" class="navbar-toggle collapsed" data-toggle="collapse" data-target="navCollapsed">
              <span class="sr-only">Toggle Navigation</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
            <a href="#" class="navbar-brand">
              <img src="" id="brandTop">
            </a>
            <h1 class="navbar-text">Song Generator</h1>
          </div>
          <div class="collapse navbar-collapse navbar-right" id="navCollapsed">
            <ul id="navbarTopPills" class="nav navbar-nav nav-pills">
              <li class="active"><a href="#home">Home</a></li>
              <li><a href="#aboutUs">About Us</a></li>
            </ul>
          </div>
        </div>
      </nav>
      <blockquote>{{{fortune}}}</blockquote>
      <p id="rhymesTestP">{{{rhymes}}}</p>
      <div class="container-fluid">
        <form method='post' enctype="text/plain" class="form-horizontal" id="contactForm">
          <div class="form-group">
            <label for="rhymeSubject" class="control-label col-sm-3">Word to Send</label>
            <div class="col-sm-5">
              <input type="text" autofocus="" required="" id="rhymeSubject" placeholder="Word to Rhyme" class="form-control">
            </div>
          </div>
          <div class="form-group">
            <label for="topicSubject" class="control-label col-sm-3">Topic</label>
            <div class="col-sm-5">
              <input type="text" autofocus="" required="" id="topicSubject" placeholder="Topic" class="form-control">
            </div>
          </div>
          <div class="form-group">
            <label for="numberRequested" class="control-label col-sm-3">Number Requested</label>
            <div class="col-sm-3">
              <input type="number" autofocus="" required="" id="numberRequested" placeholder="Number Needed" class="form-control">
            </div>
          </div>
          <div class="form-group">
            <label for="typeOfRequest" class="control-label col-sm-3">Type</label>
            <div class="col-sm-3">
              <select id='typeOfRequest' class="form-control">
                <option value="rhyme">Rhyme</option>
                <option value="adjective">Adjective</option>
                <option value="trigger">Trigger</option>
                <option value="next">Next Word</option>
                <option value="previous">Previous Word</option>
                <option value="soundsLike">Sounds Like</option>
              </select>
            </div>
          </div>
          <div class="form-group col-sm-5 col-sm-push-5 col-md-push-5">
            <button type="button" id="testBtn" class="btn btn-default">Submit</button>
          </div>
        </form>
      </div>
      <blockquote id='newlyRecievedRhymes'></blockquote>
    </div>

    <div id="aboutUs" class="mainSection row">
      <div class="container">
        <div class="col-md-12">
        	{{{body}}}
        </div>
      </div>
    </div>
        




    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    <!-- Include all compiled plugins (below), or include individual files as needed -->
    <script src="./vendor/bootstrap.js"></script>
    <script src="./vendor/socket.io.js"></script>
    <script>
      var socket = io.connect('http://localhost');
    </script>
    <script src='./js/main.js'></script>
    {{#if showTests}}
      <div id='mocha'></div>
      <script src="/vendor/mocha.js"></script>
      <script src="/vendor/chai.js"></script>
      <script>
        mocha.ui('tdd');
        var assert = chai.assert;
      </script>
      <script src="/qa/tests-global.js"></script>
      {{#if pageTestScript}}
        <script src="{{pageTestScript}}"></script>
      {{/if}}
      <script>mocha.run();</script>
    {{/if}}
  </body>

</html>